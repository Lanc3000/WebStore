@model IEnumerable<WebStore.Models.Employee>

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width"/>
        <title>Сотрудники</title>
    </head>
    <body>
        
        <table>
            <thead>
            <tr>
                <th>Id</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
            </tr>
            </thead>
            <tbody>
                @foreach(var employee in Model)
                {
                    <tr>
                        <th>@employee.Id</th>
                        <th>@employee.FirstName</th>
                        <th>@employee.LastName</th>
                        <th>@employee.Patronymic</th>
                        <th>@employee.Age</th>
                    </tr>
                }
        </tbody>
        </table>
        
        <hr />

        <a href="/home/index">На главную</a>

    </body>
</html>
