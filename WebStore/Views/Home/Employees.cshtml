@model IEnumerable<WebStore.Models.Employee>

@{
    ViewData["Title"] = "Сотрудники";
}
<h3>Список сотрудников:</h3>
<table>
    <thead>
    <tr>
        <th>Id</th>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>Возраст</th>
    </tr>
    </thead>
    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Patronymic</td>
                <td>@employee.Age</td>
                <td>
                    <a href="~/home/employee/@employee.Id">инфо о @employee.Id</a>
                </td>
            </tr>
        }
</tbody>
</table>
        
<hr />

<a href="/home/index">На главную</a>
